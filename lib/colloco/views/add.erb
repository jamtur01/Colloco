<h1>Welcome to <%= @app_name %></h1>

<br />
<br />
<br />

<div style="width: 360px; border: 1px dotted #333; padding: 5px; margin: 0px auto;">
  <form action='/create' method='post'>
    <div class="row">
      <span class="label">Title:</span><span class="formw"><input name='title' type="text" size="25" /></span>
    </div>
    <div class="row">
      <span class="label">Maker:</span><span class="formw"><input name='maker' type="text" size="25" /></span>
    </div>
    <div class="row">
      <span class="label">Date:</span><span class="formw"><input name='date' type="text" size="25" /></span>
    </div>
   <div class="row">
      <span class="label">Source:</span><span class="formw"><input name='source' type="text" size="25" /></span>
    </div>
   <div class="row">
      <span class="label">Price:</span><span class="formw"><input name='price' type="text" size="25" /></span>
    </div>
    <div class="row">
      <span class="formw"><input type='submit' name='submit' value='Add new map' /></span>
      <input type='hidden' name='referer' value='<%= request.env["HTTP_REFERER"] %>'>
    </div>
  <div class="spacer">
  &nbsp;
  </div>
 </form>

</div>
